<% @title = 'Home' %>
<div class="row text-center">
  <div class="col-sm-6 col-lg-3">
    <h1>Code</h1>
    <p><%=link_to( image_tag("code_logo", class: "img-fluid", alt: "Link to Code Examples"), code_path, class: "logo_image" ) %></p>
  </div>
  <div class="col-sm-6 col-lg-3">
    <h1>Photography</h1>
    <p><%= link_to(image_tag("photos_logo", class: "img-fluid", alt: "Link to Photography Examples"), photos_path, class: "logo_image") %></p>
  </div>
  <div class="col-sm-6 col-lg-3">
    <h1>About</h1>
    <p><%= link_to(image_tag("contact_logo", class: "img-fluid", alt: "Link to Contact Page"), about_path, class: "logo_image") %></p>
  </div>
  <div class="col-sm-6 col-lg-3">
    <h1>Contact</h1>
    <p><%= link_to(image_tag(get_contact_photo[:link], class: "img-fluid", alt: "Link to Contact Page"), contact_path, class: "logo_image") %></p>
  </div>
</div>